@model Devs2Blu.ProjetosAula.CSharpMVCRevisao.Models.Drinks;

<div class="row" id="content-list">
    @foreach (var item in Model.drinks)
    {
        <div class="card" style="width: 15rem;">
            <div class="card-header">
                <img src="@item.strDrinkThumb" class="card-img-top">
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="badge bg-black text-white col-4">@item.idDrink</span>
                        <span>@item.strDrink</span>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>
